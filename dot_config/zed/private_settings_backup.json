{
  "debugger": {
    "dock": "left"
  },
  "theme": {
    "light": "Modus Operandi Deuteranopia",
    "dark": "One Dark"
  },
  "ui_font_size": 17,
  "buffer_font_size": 16,
  "buffer_font_features": {
    "calt": false
  },

  // Editor
  "completions": {
    "words": "disabled"
  },
  "minimap": {
    "show": "always",
    "display_in": "active_editor"
  },
  "scrollbar": {
    "axes": {
      "vertical": false
    }
  },

  // Deuteranopia git fixes
  "experimental.theme_overrides": {
    "version_control.deleted": "#FF0000",
    "version_control.added": "#0000FF",
    "version_control.ignored": null,
    "version_control.renamed": null,
    "version_control.conflict": null,
    "version_control.modified": null,
    "version_control.conflict.ours_background": null,
    "version_control.conflict.theirs_background": null,
    "version_control.conflict.divider_background": null,
    "version_control.conflict.ours_marker_background": null,
    "version_control.conflict.theirs_marker_background": null
  },
  // AI
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },

  // Editor
  "format_on_save": "on",
  "autosave": {
    "after_delay": {
      "milliseconds": 200
    }
  },
  // Languages
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemas": {
            "https://spec.openapis.org/oas/3.1/schema/2025-02-13": [
              "specs/**/*.yml"
            ]
          }
        }
      }
    },
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic"
          // "include": ["service"]
        }
      }
    }
  },

  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    },
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "auto_install_extensions": {
    // "codebook": true,
    // "docker-compose": true,
    // "dockerfile": true,
    // "ini": true,
    // "html": true,
    "git-firefly": true,
    // "basedpyright": true,
    "nix": true,
    // "ruff": true,
    "toml": true
  }
}
