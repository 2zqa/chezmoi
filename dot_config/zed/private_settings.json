{
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  // "autosave": {
  //   "after_delay": {
  //     "milliseconds": 300
  //   }
  // },
  // Languages
  "lsp": {
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic"
        }
      }
    }
  },
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    },
    "Python": {
      "language_servers": ["!pyright", "!pylsp", "basedpyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
